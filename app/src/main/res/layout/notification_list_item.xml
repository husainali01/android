<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dimen_10_dp"
    android:paddingRight="@dimen/dimen_10_dp"
    android:paddingLeft="@dimen/dimen_10_dp"
    android:paddingBottom="@dimen/dimen_5_dp"
    android:background="@color/main_bg"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textSize="@dimen/dimen_large"
        style="@style/TextAppearanceMedium.FontPath"
        android:textColor="@color/text_color"
        android:id="@+id/title_notification" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:visibility="gone"
        android:src="@drawable/new_icon"
        android:id="@+id/new_notification" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearanceRegular.FontPath"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_small"
        android:layout_gravity="bottom|right"
        android:text="24 Jul 2016"
        android:id="@+id/date_notification" />

</LinearLayout>

</LinearLayout>