<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:tag="tag"
    android:weightSum="1"
    tools:context="com.dotcom.jamaat.activity.Common.NotificationActivity">

    <include
        layout="@layout/actionbar_laytout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_15_dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dimen_10_dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/day"
                android:textColor="@color/login_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text=""
                style="@style/TextAppearanceBold.FontPath"
                />
            <TextView
                android:id="@+id/month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/login_bg"
                style="@style/TextAppearanceRegular.FontPath"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_15_dp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimen_10_dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/english_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text=""
                android:textColor="@color/login_bg"
                style="@style/TextAppearanceMedium.FontPath"
                />
            <TextView
                android:id="@+id/english_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/login_bg"
                style="@style/TextAppearanceRegular.FontPath"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp"
        android:background="@color/line_color"
        />
    <TextView
        android:id="@+id/miqaatTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_16_sp"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingEnd="@dimen/dimen_15_dp"
        android:paddingBottom="@dimen/dimen_5_dp"
        android:paddingTop="@dimen/dimen_5_dp"
        android:textColor="@color/login_bg"
        android:background="@color/white"
        android:gravity="center"
        style="@style/TextAppearanceBold.FontPath"
        android:text="Today's Miqat"/>

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/main_bg"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_20_sp"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        android:text="@string/empty_list" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgreay"
        android:paddingTop="@dimen/dimen_2_dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/notification_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dimen_5_dp"
                android:layout_weight="1"
                />
<!--        <View
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_0_dp"
            android:layout_weight="1"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dp"
            android:background="@color/line_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingBottom="@dimen/dimen_2_dp"
            android:paddingTop="@dimen/dimen_2_dp"
            android:textColor="@color/subscription_button"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            style="@style/TextAppearanceMedium.FontPath"
            android:text="Owned by - Murtaza Sultani , Mob - +918602297118"/>
    </LinearLayout>

</LinearLayout>
